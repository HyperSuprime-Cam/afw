# -*- python -*-
import os
import glob

from lsst.sconsUtils import scripts, env, targets

ccExampleList = []
spatialCellSrcList = ["spatialCellExample.cc", "testSpatialCell.cc"]
for path in glob.glob("#examples/*.cc"):
    base, name = os.path.split(path)
    if name.endswith("_wrap.cc"): continue
    if name in spatialCellSrcList:
        continue
    ccExampleList.append(name)

scripts.BasicSConscript.examples(
    ccExamples=ccExampleList, swigSrc={"testSpatialCellLib": ["testSpatialCell.cc"]}
    )

targets["examples"].extend(
    env.Program(spatialCellSrcList, LIBS=env.getLibs("main"))
    )
